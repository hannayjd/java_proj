{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug JUnit Tests",
            "request": "launch",
            "mainClass": "org.junit.platform.console.ConsoleLauncher",
            "projectName": "java_proj",
            "args": [
                "--scan-classpath",
                "--details",
                "tree"
            ]
        },
        {
            "type": "java",
            "name": "Debug Current Test File",
            "request": "launch",
            "mainClass": "org.junit.platform.console.ConsoleLauncher",
            "args": [
                "--select-file=${file}"
            ]
        }
    ]
}